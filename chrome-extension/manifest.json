{
  "manifest_version": 3,
  "name": "Claude Transcript Capture",
  "version": "1.0.0",
  "description": "Passively captures Claude.ai conversations for vault-mcp transcript search",
  "permissions": [
    "storage",
    "alarms",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["inject.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": ["bridge.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
